# Super + Esc
#   bspc quit 1

# Brightness
XF86MonBrightness{Down,Up}
  xbacklight -time 0 {-,+}10

# Audio
XF86Audio{Mute,Stop}
  pamixer --toggle-mute

  # amixer -D pulse sset Master toggle

XF86Audio{Lower,Raise}Volume
  pamixer --{decrease,increase} 5

XF86Audio{Play,Next,Prev}
  playerctl --player=spotify {play-pause,next,previous}

# terminal emulator
super + {_,ctrl +,shift +} Return
	{$TERMINAL -e tmux new-session -A -s Default,tmuxselect,kitty}

super + w
  firefox

# SSH to local clients
super + {_, shift +} F3
  alacritty -e ssh {bea -t tmux a,yio-remote}

# program launcher
super + space
  rofi -show drun

super + ctrl + shift + space
  SUDO_ASKPASS=~/bin/askpass-rofi rofi -show drun -run-command "sudo -A {cmd}"

alt + Tab
  rofi -show window

super + Escape
  power.sh

# Screenshot
{_,shift +,ctrl +}Print
  maim { ,-s,-i $(xdotool getactivewindow)} --hidecursor ~/Pictures/Screenshots/$(date +%Y-%m-%d_%H-%M-%S).png

# make sxhkd reload its configuration files:
super + shift + Escape
  i3-msg reload; \
	pkill -USR1 -x sxhkd; \
  $HOME/.config/polybar/launch.sh

  # bspc wm -r

super + F1
  brightness

# Open a website in floating electron window
super + m
  chat.sh

super + grave
  emojiselect
