# Super + Esc
#   bspc quit 1

# Brightness
XF86MonBrightness{Down,Up}
  xbacklight -time 0 {-,+}10

# Audio
XF86Audio{Mute,Stop}
  pamixer --toggle-mute

  # amixer -D pulse sset Master toggle

XF86Audio{Lower,Raise}Volume
  pamixer -u --{decrease,increase} 5; \
  notify-send --expire-time=800 "Volume" "Set to $(pamixer --get-volume-human)" \
    -h string:x-canonical-private-synchronous:Volume;

# TODO: Make possible to select which player to target
XF86Audio{Play,Next,Prev}
  playerctl {play-pause,next,previous}

super + XF86Audio{Play,Stop}
  playerctl --all-players {play,pause}

# terminal emulator
super + {_,ctrl +,shift +} Return
	{$TERMINAL -e tmux new-session -A -s Default,tmuxselect,kitty}

super + w
  firefox

# SSH to local clients
super + {_, shift +} F3
  alacritty --command ssh {bea -t tmux a,yio-remote}

# program launcher
super + {_,ctrl +} space
  rofi -show {drun, run}

super + ctrl + shift + space
  SUDO_ASKPASS=~/bin/askpass-rofi rofi -show drun -run-command "sudo -A {cmd}"

alt + Tab
  rofi -show window

super + Escape
  power.sh

# Screenshot
{_,shift +,ctrl +}Print
  maim { ,-s,-i $(xdotool getactivewindow)} --hidecursor ~/Pictures/Screenshots/$(date +%Y-%m-%d_%H-%M-%S).png

# make sxhkd reload its configuration files:
super + shift + Escape
  i3-msg reload; \
	pkill -USR1 -x sxhkd; \
  $HOME/.config/polybar/launch.sh

  # bspc wm -r

super + F1
  brightness

# Launch HA
super + F4
  chromium --new-window --app=http://bea:8123

# Open a website in floating electron window
super + m
  chat.sh

super + {_,shift +} grave
  emojiselect {_,insert directly}

# Temporarily disable clipmenud
super + F5
  notify-send "clipmenud" "Diabling capture for 30s"; \
  clipctl disable; \
  sleep 30; \
  clipctl enable; \
  notify-send "clipmenud" "Capture enabled again"

# Select clipboard content from history
super + Insert
  CM_LAUNCHER=rofi clipmenu
